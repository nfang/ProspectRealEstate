@using Resx = ProspectRealEstate.Web.Resources;

<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js">
<!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@ViewBag.Title</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    <link href="@Url.Content("~/Content/css/normalize.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,400,700|Open+Sans+Condensed:300|Over+the+Rainbow' rel='stylesheet' type='text/css'>
    <link href="@Url.Content("~/Content/css/main.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/js/vendor/modernizr-2.6.2.min.js")"></script>
    <script src="@Url.Content("~/Content/js/vendor/jquery-1.8.2.min.js")"></script>
    <script src="@Url.Content("~/Content/js/vendor/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/vendor/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
</head>
<body>
    <div class="container">
        <div id="header">
            <h2>Prospect Real Estate</h2>
            <span class="lang pull-right">
                @Html.ActionLink("English", "ChangeLanguage", "Home",
                new { lang = "en-AU", returnUrl = ViewContext.HttpContext.Request.Url != null ? ViewContext.HttpContext.Request.Url.PathAndQuery : null },
                UICulture.Equals("en-AU", StringComparison.InvariantCultureIgnoreCase) ? new { @class = "current" } : null)
                <span class="separator">/</span>
                @Html.ActionLink("中文", "ChangeLanguage", "Home",
                new { lang = "zh-CN", returnUrl = ViewContext.HttpContext.Request.Url != null ? ViewContext.HttpContext.Request.Url.PathAndQuery : null },
                UICulture.Equals("zh-CN", StringComparison.InvariantCultureIgnoreCase) ? new { @class = "current" } : null)
            </span>
        </div>
        <div class="navbar">
            <div class="navbar-inner">
                <ul class="nav">
                    <li @if (ViewContext.RouteData.Values["controller"].ToString() == "Home" &&
                             ViewContext.RouteData.Values["action"].ToString() == "Index")
                        { 
                            @:class="active" 
                        }>
                        @Html.ActionLink(Resx.Shared.Layout.Home, "Index", "Home")
                    </li>
                    <li @if (ViewContext.RouteData.Values["controller"].ToString() == "Business")
                        { 
                            @:class="active" 
                        }>
                        @Html.ActionLink(Resx.Shared.Layout.Businesses, "List", "Business")
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            @Resx.Shared.Layout.Properties
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink(Resx.Shared.Layout.ForSale, "Sale", "Property")</li>
                            <li>@Html.ActionLink(Resx.Shared.Layout.ForRent, "Rent", "Property")</li>
                        </ul>
                    </li>
                    <li @if (ViewContext.RouteData.Values["action"].ToString() == "Finance")
                        { 
                            @:class="active" 
                        }>
                        @Html.ActionLink(Resx.Shared.Layout.Finance, "Finance", "Home")
                    </li>
                    <li @if (ViewContext.RouteData.Values["action"].ToString() == "About")
                        { 
                            @:class="active" 
                        }>
                        @Html.ActionLink(Resx.Shared.Layout.About, "About", "Home")
                    </li>
                    <li @if (ViewContext.RouteData.Values["controller"].ToString() == "ContactUs")
                        { 
                            @:class="active" 
                        }>
                        @Html.ActionLink(Resx.Shared.Layout.ContactUs, "Index", "ContactUs")
                    </li>
                </ul>
            </div>
        </div>

        @RenderBody()

        <div id="footer">
            <div class="pull-left">
                <ul>
                    <li>
                        @Html.ActionLink(Resx.Shared.Layout.Home, "Index", "Home")
                        <span class="separator">|</span>
                    </li>
                    <li>
                        @Html.ActionLink(Resx.Shared.Layout.About, "About", "Home")
                        <span class="separator">|</span>
                    </li>
                    <li>
                        @Html.ActionLink(Resx.Shared.Layout.Privacy, "Privacy", "Home")
                        <span class="separator">|</span>
                    </li>
                    <li>
                        @Html.ActionLink(Resx.Shared.Layout.ContactUs, "Index", "ContactUs")
                    </li>
                </ul>
            </div>
            <div class="pull-right">
                <p>&copy; 2012 Prospect Real Estate. @Resx.Shared.Layout.Copyright</p>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <script src="@Url.Content("~/Content/js/vendor/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Content/js/main.js")"></script>
</body>
</html>
