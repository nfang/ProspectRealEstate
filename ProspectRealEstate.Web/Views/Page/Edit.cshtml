@model ProspectRealEstate.Web.Models.Page
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    @foreach (var lingua in Model.Multilingua)
    {
        @Html.ActionLink(lingua.Language.DisplayName, "Edit", new { lang="en-AU", id = lingua.ID })
        <span class="separator">|</span>
    }
</div>

@using (Html.BeginForm("Edit", "Page", FormMethod.Post, new
{
    id = "pageEditor",
    @class = "form-horizontal"
}))
{
    @Html.HiddenFor(m => m.ID);
    <div class="fh-control-wrapper">
        @Html.EditorFor(m => m.Title)
    </div>
    <div class="fh-control-wrapper">
        @Html.TextAreaFor(m => m.Content, new { id = "editor", @class = "span9", rows = "15", placeholder = "Enter text..." })
    </div>
    <div class="submit-button">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
}
<script type="text/javascript">
    $("#editor").wysihtml5({
        "font-styles": true,    // Font styling, e.g. h1, h2, etc.
        "emphasis": true,    // Italics, bold, etc.
        "lists": true,    // (Un)ordered lists, e.g. Bullets, Numbers.
        "html": false,   // Button which allows you to edit the generated HTML.
        "link": true,    // Button to insert a link.
        "image": true,    // Button to insert an image.
        "color": false    // Button to change color of font
    });
</script>
